datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

enum Gender {
  male
  female
}

model Student {
  id                  Int               @id @default(autoincrement())
  name                String
  familyName          String
  dateOfBirth         DateTime
  gender              String
  internalPhotoAllowed Boolean
  externalPhotoAllowed Boolean
  medicalNotes        String?
  yearEnteredReception Int
  parent              Parent[]
  courses             Course[]
  attendance          Attendance[]
  term                Term[]      
  report              Report[]
  mentor              Mentor[]
  house               House[]
  registration        Registration[]
  @@unique([name, familyName, dateOfBirth])
}

model Parent {
  name     String?
  lastName String?
  address  String?
  postcode String?
  email    String    @id
  phone   String?

  user    User? @relation(fields: [user_id], references: [id]) 
  user_id String? @unique
  students Student[]
  registration Registration[]
}

enum CourseCatagory {
  Islamic
  Skill
  Sport
  Languge
}

model Course {
  id           Int               @id @default(autoincrement())
  course_name         String
  learning_outcomes String? 
  description  String? 
  more_info    String? 
  image        String?
  
  is_new       Boolean?
  is_closed    Boolean?
  term         Term?  @relation(fields: [term_id], references: [id])
  term_id      Int?    
  ageGroup     String?
  students     Student[]
  topics       Topic[]
  catagory     CourseCatagory?
  show         Boolean?
  instructor   Staff[]
  

  islamicChoice1 CourseChoice? @relation(name: "IslamicChoice1")
  islamicChoice2 CourseChoice? @relation(name: "IslamicChoice2")
  islamicChoice3 CourseChoice? @relation(name: "IslamicChoice3")

  skillChoice1 CourseChoice? @relation(name: "SkillChoice1")
  skillChoice2 CourseChoice? @relation(name: "SkillChoice2")
  skillChoice3 CourseChoice? @relation(name: "SkillChoice3")

  sportChoice1 CourseChoice? @relation(name: "SportChoice1")
  sportChoice2 CourseChoice? @relation(name: "SportChoice2")
  sportChoice3 CourseChoice? @relation(name: "SportChoice3")

  languageChoice1 CourseChoice? @relation(name: "LanguageChoice1")
  languageChoice2 CourseChoice? @relation(name: "LanguageChoice2")
  languageChoice3 CourseChoice? @relation(name: "LanguageChoice3")


  @@unique([course_name, term_id])
  @@index(fields: [term_id])
}

model Calendar {
  title   String
  date    DateTime
  private Boolean

  @@unique([title,date])
}

model Attendance {
  student_id  Int
  student     Student   @relation(fields: [student_id], references: [id])
  date        DateTime
  class1      AttendanceState?
  class2      AttendanceState?
  class3      AttendanceState?
  class4      AttendanceState?

  @@unique([student_id, date])
}

model Topic {
  id     Int      @id @default(autoincrement())
  course Course[]
  title   String
  description   String?

}

model Report {
  id      Int  @id
  create_date DateTime
  report  String
  term    Term  @relation(fields: [term_id], references: [id])
  term_id Int
  type    ReportType
  student Student[]
  sub_type ReportSubType
  authour Staff  @relation(fields: [staff_email], references: [email])
  staff_email String

  @@index(fields: [staff_email])
  @@index([term_id])


}

model Term {
  id    Int  @id
  students    Student[]
  courses     Course[]
  reports     Report[]
  houses      House[]
}

model Staff {
  name        String
  full_name   String
  email       String @id
  mentor      Mentor?
  reports     Report[]
  course      Course[]

}

model House {
  id  Int @id 
  name String
  term Term @relation(fields: [term_id], references: [id])
  term_id Int
  students Student[]
  point   Int

  @@unique([name,term_id])
  @@index([term_id])
}

model Mentor {
  id  Int  @id  @default(autoincrement())
  mentor Staff @relation(fields: [staff_email], references: [email])
  staff_email String @unique
  students Student[]
}

model Registration {
  id Int @id @default(autoincrement())
  parent Parent  @relation(fields: [parent_email], references: [email])
  parent_email String 
  student Student  @relation(fields: [student_id], references: [id])
  student_id Int 
  course_choice CourseChoice?

  conditions          Boolean
  payRef         Int?
  payTime        DateTime?

}

model CourseChoice {
  id Int @id @default(autoincrement())
  application Registration @relation(fields: [applicatiopn_id], references: [id])
  applicatiopn_id Int @unique

  // For Islamic courses
  islamic_choice_1_id Int  @unique
  islamic_choice_2_id Int  @unique
  islamic_choice_3_id Int  @unique
  islamic_choice_1 Course @relation(name: "IslamicChoice1", fields: [islamic_choice_1_id], references: [id])
  islamic_choice_2 Course @relation(name: "IslamicChoice2", fields: [islamic_choice_2_id], references: [id])
  islamic_choice_3 Course @relation(name: "IslamicChoice3", fields: [islamic_choice_3_id], references: [id])

  // For Skill courses
  skill_choice_1_id Int  @unique
  skill_choice_2_id Int  @unique
  skill_choice_3_id Int  @unique
  skill_choice_1 Course @relation(name: "SkillChoice1", fields: [skill_choice_1_id], references: [id])
  skill_choice_2 Course @relation(name: "SkillChoice2", fields: [skill_choice_2_id], references: [id])
  skill_choice_3 Course @relation(name: "SkillChoice3", fields: [skill_choice_3_id], references: [id])

  // For Skill courses
  sport_choice_1_id Int  @unique
  sport_choice_2_id Int  @unique
  sport_choice_3_id Int  @unique
  sport_choice_1 Course @relation(name: "SportChoice1", fields: [sport_choice_1_id], references: [id])
  sport_choice_2 Course @relation(name: "SportChoice2", fields: [sport_choice_2_id], references: [id])
  sport_choice_3 Course @relation(name: "SportChoice3", fields: [sport_choice_3_id], references: [id])

  // For Skill courses
  language_choice_1_id Int  @unique
  language_choice_2_id Int  @unique
  language_choice_3_id Int  @unique
  language_choice_1 Course @relation(name: "LanguageChoice1", fields: [language_choice_1_id], references: [id])
  language_choice_2 Course @relation(name: "LanguageChoice2", fields: [language_choice_2_id], references: [id])
  language_choice_3 Course @relation(name: "LanguageChoice3", fields: [language_choice_3_id], references: [id])

}

enum AttendanceState {
  ontime
  absent
  late
}

enum ReportType {
  teacher
  incident
}

enum ReportSubType {
  behaviour
  angry
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  parent        Parent?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}